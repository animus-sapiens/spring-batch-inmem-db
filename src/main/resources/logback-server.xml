<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <springProperty name="ENV" source="com.ews.log.environment" defaultValue="UNKNOWN" />
    <springProperty name="APP_NAME" source="com.ews.log.app.name" defaultValue="SPRING-BATCH-INMEM-DB" />
    <springProperty name="APP_INSTANCE" source="com.ews.log.app.instance" defaultValue="SPRING-BATCH-INMEM-DB" />
    
    <property name="CONSOLE_LOG_PATTERN" value="[%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}] [%-5level] [%-12.12t] [host=${HOSTNAME},env=${ENV},app=${APP_NAME}] [%c{10}] - %m%n" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}.${HOSTNAME}-${APP_INSTANCE}</file>
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.${HOSTNAME}-${APP_INSTANCE}.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>${MAX_HISTORY}</maxHistory>
        </rollingPolicy>
    </appender>    

    <logger name="org.apache.sshd.common.util.SecurityUtils" level="WARN" />
    <logger name="org.crsh.plugin" level="WARN" />
    <logger name="org.crsh.ssh" level="WARN" />
    <logger name="org.springframework.boot.actuate.autoconfigure.CrshAutoConfiguration" level="WARN" />
                
	<!-- log to both console and file -->                
                
    <logger name="com.ews" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>
    
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

</configuration>